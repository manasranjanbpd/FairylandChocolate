@model FairylandChocolate.Models.ProductModel
@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
<div class="col">
            <a href="/" class="breadcrumb">Home</a>
            <a href='/ProductCategory/@Model.CategoryName' class="breadcrumb">@Model.CategoryName</a>
            <span class="breadcrumb">@Model.ProductName</span>
        </div>
        <br /><br />
        <div class="row">
            <div class="col xl4 offset-s2 z-depth-2 borderAll" style="padding:2%">
                <img class="responsive-img" style="width:100%" src="@Model.ProductImageSrc">
            </div>
            <div class="col xl5 offset-xl1">
                <h5 class="fontChanger">@Model.ProductName</h5>
                <span>
                    @Model.ProductDesc
                </span>
                <br /><br />
		        <b><p>&#8377;@Model.ProductPrice</p></b>
		        <br />
		        @if(@Model.ProductIsActive){
                <a class="waves-effect waves-light btn borderAll ">
                    <i class="material-icons left">shopping_cart</i>Add To Cart
                </a>
                <a href="checkout.html" class="waves-effect waves-light btn brown borderAll" style="margin-left:20px;">
                    <i class="material-icons left">flash_on</i>Buy Now
                </a>
                }
        		else
        		{
                    <span>
                        This Product is out of stock. 
            	        we will notify when this will be available.
        			<br/>
        			<a class="waves-effect waves-light btn borderAll ">
                            Notify Me
                        </a>
                    </span>
            	}
             </div>
        </div>


        </div>